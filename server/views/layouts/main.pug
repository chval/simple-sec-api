extends base.pug
block body_content
    body
        div.container
            header.py-3
                div.row.flex-nowrap.justify-content-between.align-items-center
                    div.col-4.pt-1
                        a.text-dark.text-decoration-none(href="/")
                            svg(xmlns="http://www.w3.org/2000/svg" width="70" height="30")
                                text(x="0" y="15" fill="#003300") SecApi
                    if isAuthenticated
                        div.col-4.text-center
                            a.text-dark.text-decoration-none(href="/profile") #{myName}
                    div.col-4.d-flex.justify-content-end.align-items-center
                        if isAuthenticated
                            a.btn.btn-sm.btn-outline-secondary(href='/auth/logout') Logout
                        else
                            a.btn.btn-sm.btn-outline-secondary(href='/auth/login') Login
        block main_content
    script(src='/js/layouts.main.js')
